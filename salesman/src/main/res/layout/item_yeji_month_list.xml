<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_month_yeji"
        style="@style/Text_666_12sp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="2016-10-19"
        android:visibility="gone" />

    <android.support.v7.widget.CardView style="@style/CardView_Style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_item_list_com_dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp">

                <TextView
                    style="@style/Text_333_14sp"
                    android:text="订单量：" />

                <TextView
                    android:id="@+id/tv_order_num_yeji"
                    style="@style/Text_009_14sp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="56962" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp">

                <TextView
                    style="@style/Text_333_14sp"
                    android:text="店宝交易额：" />

                <TextView
                    android:id="@+id/tv_dianbao_yeji"
                    style="@style/Text_009_14sp"
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_weight="2"
                    android:text="56962" />

                <TextView
                    style="@style/Text_333_14sp"
                    android:text="新增客户：" />

                <TextView
                    android:id="@+id/tv_newly_client_yeji"
                    style="@style/Text_009_14sp"
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:text="66" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp">

                <TextView
                    style="@style/Text_333_14sp"
                    android:text="自营交易额：" />

                <TextView
                    android:id="@+id/tv_ziying_yeji"
                    style="@style/Text_009_14sp"
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_weight="2"
                    android:text="56962" />

                <TextView
                    style="@style/Text_333_14sp"
                    android:text="活跃客户：" />

                <TextView
                    android:id="@+id/tv_active_client_yeji"
                    style="@style/Text_009_14sp"
                    android:layout_width="@dimen/margin_0dp"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:layout_weight="1"
                    android:text="66" />
            </LinearLayout>

            <ImageView
                style="@style/SplitLine_ImageView"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp" />

            <TextView
                style="@style/Text_666_14sp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:text="计入考核：" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp">

                <TextView
                    style="@style/Text_333_14sp"
                    android:text="KPI总交易额：" />

                <TextView
                    android:id="@+id/tv_kpi_total_yeji"
                    style="@style/Text_009_14sp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="56962" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_15dp"
                android:layout_marginTop="@dimen/margin_15dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_10dp"
                android:paddingRight="@dimen/margin_10dp">

                <TextView
                    style="@style/Text_333_14sp"
                    android:text="KPI自营交易额：" />

                <TextView
                    android:id="@+id/tv_kpi_ziying_yeji"
                    style="@style/Text_009_14sp"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:text="56962" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>