<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_90"
    android:background="@drawable/button_ripple"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/common_margin">

        <TextView
            android:id="@+id/tv_trace_date"
            style="@style/Text_Black_28"
            android:text="2016-1-28" />

        <TextView
            android:id="@+id/tv_trace_week"
            style="@style/Text_Black_28"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_30"
            android:drawableRight="@drawable/arrow_right_grey"
            android:text="星期日" />
    </LinearLayout>

    <ImageView style="@style/SplitLine_ImageView" />
</LinearLayout>