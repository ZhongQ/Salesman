<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_ripple"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin">

        <TextView
            android:id="@+id/tv_name1_single_select"
            style="@style/Text_Black_32"
            android:layout_width="@dimen/margin_190"
            tools:text="线路名" />

        <TextView
            android:id="@+id/tv_name2_single_select"
            style="@style/Text_Black_32"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            tools:text="@string/select_please" />

        <ImageView
            android:id="@+id/iv_single_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rb_default" />
    </LinearLayout>

    <ImageView style="@style/SplitLine_ImageView" />
</LinearLayout>