<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_75dp"
    android:background="@drawable/button_ripple"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/left_right_12dp">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_65dp">

        <RelativeLayout
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_5dp">

            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="@dimen/margin_45dp"
                android:layout_height="@dimen/margin_45dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/log_msg_icon" />

            <TextView
                android:id="@+id/tv_red_point"
                style="@style/Text_Black_20"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/red_point_icon"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_2dp"
                android:paddingRight="@dimen/margin_2dp"
                android:text="22"
                android:textColor="@color/white"
                android:textSize="@dimen/size_10sp" />
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingRight="@dimen/left_right_12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subject"
                    style="@style/Text_333_16sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="公告" />

                <TextView
                    android:id="@+id/tv_time"
                    style="@style/Text_999_12sp"
                    android:text="17:24" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_content"
                style="@style/Text_999_14sp"
                android:layout_marginTop="@dimen/margin_4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="我是内容" />

        </LinearLayout>

        <ImageView
            style="@style/SplitLine_ImageView"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</LinearLayout>