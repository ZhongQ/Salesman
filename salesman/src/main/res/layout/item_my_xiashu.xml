<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView style="@style/CardView_Style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_item_list_com_px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_30"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:paddingTop="@dimen/margin_30"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_daily_sub"
                    style="@style/Text_666_28"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_50"
                    android:layout_weight="1"
                    android:background="@drawable/et_background_shape"
                    android:gravity="center"
                    android:text="@string/report" />

                <TextView
                    android:id="@+id/tv_track_sub"
                    style="@style/Text_666_28"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_weight="1"
                    android:background="@drawable/et_background_shape"
                    android:gravity="center"
                    android:text="足迹" />

                <TextView
                    android:id="@+id/tv_sign_sub"
                    style="@style/Text_666_28"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_weight="1"
                    android:background="@drawable/et_background_shape"
                    android:gravity="center"
                    android:text="签到" />

                <TextView
                    android:id="@+id/tv_yeji_sub"
                    style="@style/Text_666_28"
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="@dimen/margin_50"
                    android:layout_marginLeft="@dimen/margin_40"
                    android:layout_weight="1"
                    android:background="@drawable/et_background_shape"
                    android:gravity="center"
                    android:text="业绩" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>