<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_80dp"
    android:background="@drawable/button_ripple"
    android:orientation="horizontal">

    <com.salesman.views.CircleHeadView
        android:id="@+id/hv_client"
        style="@style/CircleHeadView_Style_90"
        android:layout_width="@dimen/margin_45dp"
        android:layout_height="@dimen/margin_45dp"
        android:layout_marginLeft="@dimen/left_right_12dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_13dp"
        app:circle_src="@drawable/shop_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_client"
                    style="@style/Text_333_16sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="芙蓉兴盛便利店" />

                <ImageView
                    android:id="@+id/btn_visit_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/left_right_12dp"
                    android:src="@drawable/visitting_client" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_addr_client"
                style="@style/Text_666_14sp"
                android:layout_marginTop="@dimen/margin_3dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="南三区科技园粤兴6道" />

            <TextView
                android:id="@+id/tv_distance_client"
                style="@style/Text_009_12sp"
                android:layout_marginTop="@dimen/margin_3dp"
                android:drawableLeft="@drawable/client_distance_icon"
                android:drawablePadding="@dimen/margin_5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="据我100m" />

        </LinearLayout>

        <ImageView style="@style/SplitLine_ImageView" />
    </LinearLayout>


</LinearLayout>