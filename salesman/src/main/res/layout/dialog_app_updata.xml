<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_195dp"
            android:layout_marginTop="@dimen/margin_70dp"
            android:background="@drawable/dialog_shape_white_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_updata_fish" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_18dp"
                android:text="阿街新版本上线啦"
                android:textColor="@color/black"
                android:textSize="@dimen/size_19sp" />

            <Button
                android:id="@+id/btn_download_apk"
                android:layout_width="@dimen/margin_135dp"
                android:layout_height="@dimen/margin_40dp"
                android:layout_marginTop="@dimen/margin_18dp"
                android:background="@drawable/app_updata_btn_bg"
                android:gravity="center"
                android:text="立即下载"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16sp" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>