<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_45dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name_signin"
        style="@style/Text_333_16sp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="张三" />

    <TextView
        android:id="@+id/tv_time_signin"
        style="@style/Text_aaa_12sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_12dp"
        android:drawablePadding="@dimen/margin_5dp"
        android:drawableRight="@drawable/arrow_right_grey"
        android:text="9:29:59" />

    <ImageView
        style="@style/SplitLine_ImageView"
        android:layout_alignParentBottom="true" />

</RelativeLayout>