<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_40dp"
    android:background="@color/white">

    <ImageView
        style="@style/SplitLine_ImageView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line_divide_deep_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_6dp"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_12dp"
        android:paddingRight="@dimen/margin_12dp">

        <FrameLayout
            android:id="@+id/lay_filtrate1"
            style="@style/Client_Filtrate_Lay_Style_DP"
            android:layout_marginRight="@dimen/margin_6dp">

            <ImageView
                android:id="@+id/iv_filtrate1"
                style="@style/Client_Filtrate_ImageView_Style" />

            <TextView
                android:id="@+id/tv_filtrate1"
                style="@style/Client_Filtrate_Text_Style_DP"
                android:text="@string/all_subordinate" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lay_filtrate2"
            style="@style/Client_Filtrate_Lay_Style_DP"
            android:layout_marginRight="@dimen/margin_6dp">

            <ImageView
                android:id="@+id/iv_filtrate2"
                style="@style/Client_Filtrate_ImageView_Style" />

            <TextView
                android:id="@+id/tv_filtrate2"
                style="@style/Client_Filtrate_Text_Style_DP"
                android:text="@string/all_line" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lay_filtrate3"
            style="@style/Client_Filtrate_Lay_Style_DP"
            android:layout_marginRight="@dimen/margin_6dp">

            <ImageView
                android:id="@+id/iv_filtrate3"
                style="@style/Client_Filtrate_ImageView_Style" />

            <TextView
                android:id="@+id/tv_filtrate3"
                style="@style/Client_Filtrate_Text_Style_DP"
                android:text="智能排序" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lay_filtrate4"
            style="@style/Client_Filtrate_Lay_Style_DP"
            android:layout_marginRight="@dimen/margin_6dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_filtrate4"
                style="@style/Client_Filtrate_ImageView_Style" />

            <TextView
                android:id="@+id/tv_filtrate4"
                style="@style/Client_Filtrate_Text_Style_DP"
                android:text="是否注册" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lay_filtrate5"
            style="@style/Client_Filtrate_Lay_Style_DP">

            <ImageView
                android:id="@+id/iv_filtrate5"
                style="@style/Client_Filtrate_ImageView_Style" />

            <TextView
                android:id="@+id/tv_filtrate5"
                style="@style/Client_Filtrate_Text_Style_DP"
                android:text="重点客户" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>