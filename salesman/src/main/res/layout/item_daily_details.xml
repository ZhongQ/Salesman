<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_15"
        android:paddingTop="@dimen/margin_15">

        <TextView
            android:id="@+id/tv_filename"
            android:layout_width="@dimen/margin_240"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingLeft="@dimen/margin_40"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_32"
            tools:text="今日拜访路线今日" />

        <TextView
            android:id="@+id/tv_filevalue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_50"
            android:textColor="@color/black"
            android:textSize="@dimen/size_28"
            tools:text="我很长我很长我很长我很长我很长我很长我很长我很长" />
    </LinearLayout>

    <ImageView style="@style/SplitLine_ImageView" />

</LinearLayout>