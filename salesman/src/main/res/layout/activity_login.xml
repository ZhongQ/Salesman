<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_100"
    android:paddingRight="@dimen/margin_100"
    tools:context="com.salesman.activity.login.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_94"
        android:layout_marginTop="@dimen/margin_140"
        android:src="@drawable/login_logo_icon" />

    <com.salesman.views.ClearEditText
        android:id="@+id/et_username"
        style="@style/BaseEditText"
        android:layout_height="@dimen/margin_66"
        android:drawableLeft="@drawable/username_login"
        android:drawablePadding="@dimen/margin_50"
        android:hint="请输入账号"
        android:inputType="number"
        android:numeric="integer"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_28" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_line" />

    <com.salesman.views.ClearEditText
        android:id="@+id/et_password"
        style="@style/BaseEditText"
        android:layout_height="@dimen/margin_66"
        android:layout_marginTop="@dimen/margin_56"
        android:drawableLeft="@drawable/lock_dark"
        android:drawablePadding="@dimen/margin_50"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_28" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login_line" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_72"
        android:layout_marginTop="@dimen/margin_80"
        android:background="@drawable/btn_login_blue_bg"
        android:enabled="false"
        android:text="登     录"
        android:textColor="@color/white"
        android:textSize="@dimen/size_30" />

</LinearLayout>
