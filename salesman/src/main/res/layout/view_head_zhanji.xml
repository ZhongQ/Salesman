<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_320">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/zhanji_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_30"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_area"
            style="@style/Text_Black_28"
            android:textColor="@color/white"
            tools:text="深圳大区" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dianbao_deal"
                        style="@style/Text_Black_36"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_70"
                        android:typeface="serif"
                        tools:text="12345678" />

                    <!--<ImageView style="@style/SplitLine_ImageView" />-->

                    <TextView
                        style="@style/Text_Black_24"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="店宝交易"
                        android:textColor="@color/white" />

                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_lianhe_deal"
                        style="@style/Text_Black_36"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_70"
                        android:typeface="serif"
                        tools:text="0" />

                    <!--<ImageView style="@style/SplitLine_ImageView" />-->

                    <TextView
                        style="@style/Text_Black_24"
                        android:layout_marginTop="@dimen/margin_8"
                        android:text="@string/zhuanjiao_ziying"
                        android:textColor="@color/white" />

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/Text_Black_24"
                android:text="（本月截止当前日期总交易额："
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_total_deal"
                style="@style/Text_Black_24"
                android:layout_marginLeft="@dimen/margin_10"
                android:textColor="@color/white"
                tools:text="321230" />

            <TextView
                style="@style/Text_Black_24"
                android:text="元）"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>