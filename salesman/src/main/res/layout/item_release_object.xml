<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_90"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_margin">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10">

        <ImageView
            android:id="@+id/iv_background_obj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_1" />

        <TextView
            android:id="@+id/tv_nick_obj"
            style="@style/Text_Black_28"
            android:layout_gravity="center"
            android:text="土豆"
            android:textColor="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_20"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_name_obj"
                style="@style/Text_Black_32"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="李土豆" />

            <CheckBox
                android:id="@+id/checkbox_obj"
                style="@style/CustomCheckboxTheme"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/margin_20"
                android:paddingRight="@dimen/common_margin"
                android:paddingTop="@dimen/margin_20" />
        </RelativeLayout>

        <ImageView style="@style/SplitLine_ImageView" />
    </LinearLayout>
</LinearLayout>