<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout_Base_Style"
    tools:context="com.salesman.fragment.HomeFragment3">

    <include layout="@layout/common_title_white2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<include layout="@layout/view_empty_content" />-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_signin_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:src="@drawable/signin_btn_selector" />

            <ImageView
                android:id="@+id/iv_outside_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outsignin_btn_selector" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
