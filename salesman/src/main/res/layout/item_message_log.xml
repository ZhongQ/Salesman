<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_ripple"
    android:orientation="horizontal"
    android:padding="@dimen/margin_12dp">

    <com.salesman.views.CircleHeadView
        android:id="@+id/hv_head_log_msgs"
        style="@style/CircleHeadView_Style_70"
        android:layout_width="@dimen/margin_35dp"
        android:layout_height="@dimen/margin_35dp"
        app:shape="round"
        app:text_color_cir="@color/white"
        app:text_size_cir="@dimen/size_12sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_send"
            style="@style/Text_Black_12sp"
            android:singleLine="true"
            tools:text="江小鱼江小鱼江小鱼江小鱼江小鱼江小鱼江小鱼" />

        <TextView
            android:id="@+id/tv_content_log"
            style="@style/Text_Black_12sp"
            android:layout_marginTop="@dimen/margin_5dp"
            tools:text="赞！！！赞！！！赞！！！赞！！！赞！！！赞！！！赞！！！赞！！！赞！！！" />

        <TextView
            android:id="@+id/tv_time_send"
            style="@style/Text_aaa_12sp"
            android:layout_marginTop="@dimen/margin_5dp"
            tools:text="1小时前" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name_log"
        style="@style/Text_666_12sp"
        android:layout_width="@dimen/margin_60dp"
        tools:text="李坏的日志李坏的日志李坏的日志" />
</LinearLayout>