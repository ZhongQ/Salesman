<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:background="@drawable/dialog_white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_80dp"
            android:gravity="center"
            android:maxLines="2"
            android:paddingLeft="@dimen/margin_30dp"
            android:paddingRight="@dimen/margin_30dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/size_16sp"
            tools:text="确认退出此次编辑确认退出此次编辑确认退出此次编辑" />

        <ImageView style="@style/SplitLine_ImageView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_007ed2"
                android:textSize="@dimen/size_16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/line_vertical" />

            <TextView
                android:id="@+id/tv_dialog_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_ripple"
                android:gravity="center"
                android:text="@string/affirm"
                android:textColor="@color/color_007ed2"
                android:textSize="@dimen/size_16sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>