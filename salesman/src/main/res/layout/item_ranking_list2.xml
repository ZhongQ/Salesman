<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_60dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingRight="@dimen/margin_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/margin_21dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_marginRight="@dimen/margin_20dp">

            <ImageView
                android:id="@+id/iv_medal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gold_medal_icon" />

            <TextView
                android:id="@+id/tv_rank"
                style="@style/Text_666_14sp"
                android:layout_gravity="center"
                android:text="1" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_name"
            style="@style/Text_666_16sp"
            android:layout_width="@dimen/margin_0dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_weight="1"
            android:text="李坏" />

        <TextView
            android:id="@+id/tv_rank_abs"
            style="@style/Text_999_12sp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="排名上升：10" />

        <ImageView
            android:id="@+id/iv_arrow_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up_red" />
    </LinearLayout>

    <ImageView style="@style/SplitLine_ImageView" />
</LinearLayout>